style "default"
{
  GtkWidget::interior_focus			= 7
  GtkWidget::focus_padding			= 0
  GtkButton::default_border			= { 0, 0, 0, 0 }
  GtkButton::default_outside_border		= { 0, 0, 0, 0 }
 
  GtkRange::trough_border			= 0
  GtkRange::slider_width			= 15
  GtkRange::stepper_size			= 15
 
  GtkVScale::slider_length 			= 10
  GtkVScale::slider_width 			= 16
  GtkHScale::slider_length 			= 10
  GtkHScale::slider_width 			= 16

  GtkPaned::handle_size				= 7
  GtkScrollbar::min_slider_length		= 34
  GtkCheckButton::indicator_size		= 12
  GtkCheckButton::indicator_spacing		= 3
  GtkMenuBar::internal_padding			= 0
  GtkOptionMenu::indicator_size			= { 15, 8 }
  GtkOptionMenu::indicator_spacing		= { 8, 2, 0, 0 }
  GtkStatusbar::shadow_type			= GTK_SHADOW_NONE
  GtkSpinButton::shadow_type 			= GTK_SHADOW_NONE

  GtkEntry::cursor_color			= "#a4a4a4"
  GtkTextView::cursor_color			= "#a4a4a4"
  GtkTextView::secondary_cursor_color		= "#a4a4a4"
  GtkWidget::cursor_color			= "#a4a4a4"
  GtkWidget::secondary_cursor_color		= "#a4a4a4"

  xthickness            	= 2
  ythickness            	= 2

  fg[NORMAL]       	= "#a4a4a4" # Metacity and mouseover, Most text
  fg[PRELIGHT]     	= "#d0d0d0" # text on buttons (hover)
  fg[ACTIVE]       	= "#a4a4a4" # text on unfocused tabs
  fg[SELECTED]      	= "#d0d0d0" # selected text on lists
  fg[INSENSITIVE]   	= "#606060" # greyed "unused" text

  bg[NORMAL]		= "#262523" # entire background
  bg[PRELIGHT]		= "#262524" # button prelights
  bg[ACTIVE]		= "#4a4a4a" # selected taskbar items
  bg[SELECTED]		= "#4a4a4a" # tab border, checkbutton and radiobutton
  bg[INSENSITIVE]	= "#101010" # greyed buttons

  # window background
  bg_pixmap[NORMAL] = "/Shadows/window-bg.png"

  base[NORMAL]		= "#262524" # window background
  base[PRELIGHT]	= "#a4a4a4" # menubar outline colour
  base[ACTIVE]		= "#303030" # Menu active item in inactive window
  base[SELECTED]	= "#4d4d4d" # Menu active item in active window
  base[INSENSITIVE]	= "#262524" # greyed sliders

  text[NORMAL]		= "#a4a4a4" # text in general
  text[PRELIGHT]	= "#d0d0d0" # hover text (on buttons)
  text[ACTIVE]		= "#d0d0d0" # Active text in inactive window
  text[SELECTED]	= "#d0d0d0" # Active text in active window
  text[INSENSITIVE]	= "#606060" # greyed text


