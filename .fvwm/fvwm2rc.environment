#===================================-
# Задаем базовые параметры окружения 
#===================================-

# Путь к файлам-изображениям fvwm
ImagePath ${HOME}/.fvwm/images/
SetEnv fvwm_image_path $[HOME]/.fvwm/images

# Указываем путь к скриптам
SetEnv fvwm_script_path $[FVWM_USERDIR]/scripts/

